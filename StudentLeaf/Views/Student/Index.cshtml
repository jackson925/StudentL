                                return lessons += "<option data-id="+ value.Id +" value=''>" + value.LessonPlan + "</option>";
                        });
                       
                        return "<select id='dropDown' class='form-control'><option selected='selected'>-Select Lesson-</option>" + lessons + "</select>";
                    }
                },
                {
                    "data": "id",
