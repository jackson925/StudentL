                    render: function (data, type, student) {
                        return "<a data-id="+student.Id+" id='editref' href='/student/edit/" + student.Id + "'>" + student.Name + "</a>";
                    }
                },
                {
                    data: "ActiveLessons",
                    render: function (data) {
                        var lessons;
                        $.each(data,
